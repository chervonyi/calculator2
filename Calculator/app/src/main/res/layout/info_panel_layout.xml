<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/infoPanel"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/info_panel"
    android:padding="8dp"
    android:layout_margin="10dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_info_white"
        android:contentDescription="@string/info_content_description"
        android:scaleType="fitCenter"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/infoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/info_1"
        android:textColor="?attr/infoPanelFontColor"
        android:fontFamily="@font/ptsans_regular"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="18dp"/>

</LinearLayout>