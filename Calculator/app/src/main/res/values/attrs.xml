<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CalculatorButton">
        <attr name="text" format="string"/>
        <attr name="src" format="reference"/>
        <attr name="buttonBackground" format="reference"/>
        <attr name="type" format="enum">
            <enum name="digit" value="0"/>
            <enum name="operation" value="1"/>
            <enum name="memory" value="2"/>
            <enum name="erase" value="3"/>
            <enum name="calculation" value="4"/>
        </attr>
    </declare-styleable>


    <attr name="backgroundColor" format="reference"/>
    <attr name="headerFontMainColor" format="reference"/>
    <attr name="headerFontSubColor" format="reference"/>
    <attr name="fontColor" format="reference"/>
    <attr name="emptyMemoryButtonColor" format="reference"/>
    <attr name="emptyMemoryButtonPressedColor" format="reference"/>
    <attr name="numberButtonColor" format="reference"/>
    <attr name="numberButtonPressedColor" format="reference"/>
    <attr name="eraseButtonColor" format="reference"/>
    <attr name="eraseButtonPressedColor" format="reference"/>
    <attr name="operationButtonColor" format="reference"/>
    <attr name="operationButtonPressedColor" format="reference"/>
    <attr name="operationActiveButtonColor" format="reference"/>
    <attr name="calculationButtonColor" format="reference"/>
    <attr name="calculationButtonPressedColor" format="reference"/>
    <attr name="infoPanelBackgroundColor" format="reference"/>
    <attr name="infoPanelFontColor" format="reference"/>

</resources>