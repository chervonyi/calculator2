<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@null</item>

        <item name="colorPrimary">@color/lightModeInfoPanelBackgroundColor</item>
        <item name="colorPrimaryDark">@color/lightModeInfoPanelBackgroundColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/lightModeBackgroundColor</item>

        <!--   COLORS-->
        <item name="backgroundColor">@color/lightModeBackgroundColor</item>
        <item name="headerFontMainColor">@color/lightModeHeaderFontMainColor</item>
        <item name="headerFontSubColor">@color/lightModeHeaderFontSubColor</item>
        <item name="fontColor">@color/lightModeFontColor</item>
        <item name="emptyMemoryButtonColor">@color/lightModeEmptyMemoryButtonColor</item>
        <item name="emptyMemoryButtonPressedColor">@color/lightModeEmptyMemoryButtonPressedColor</item>
        <item name="numberButtonColor">@color/lightModeNumberButtonColor</item>
        <item name="numberButtonPressedColor">@color/lightModeNumberButtonPressedColor</item>
        <item name="eraseButtonColor">@color/lightModeEraseButtonColor</item>
        <item name="eraseButtonPressedColor">@color/lightModeEraseButtonPressedColor</item>
        <item name="operationButtonColor">@color/lightModeOperationButtonColor</item>
        <item name="operationButtonPressedColor">@color/lightModeOperationButtonPressedColor</item>
        <item name="operationActiveButtonColor">@color/lightModeOperationActiveButtonColor</item>
        <item name="calculationButtonColor">@color/lightModeCalculateButtonColor</item>
        <item name="calculationButtonPressedColor">@color/lightModeCalculateButtonPressedColor</item>
        <item name="infoPanelBackgroundColor">@color/lightModeInfoPanelBackgroundColor</item>
        <item name="infoPanelFontColor">@color/lightModeInfoPanelFontColor</item>
    </style>



    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@null</item>

        <item name="colorPrimary">@color/darkModeInfoPanelBackgroundColor</item>
        <item name="colorPrimaryDark">@color/darkModeInfoPanelBackgroundColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/darkModeBackgroundColor</item>

        <!--   COLORS-->
        <item name="backgroundColor">@color/darkModeBackgroundColor</item>
        <item name="headerFontMainColor">@color/darkModeHeaderFontMainColor</item>
        <item name="headerFontSubColor">@color/darkModeHeaderFontSubColor</item>
        <item name="fontColor">@color/darkModeFontColor</item>
        <item name="emptyMemoryButtonColor">@color/darkModeEmptyMemoryButtonColor</item>
        <item name="emptyMemoryButtonPressedColor">@color/darkModeEmptyMemoryButtonPressedColor</item>
        <item name="numberButtonColor">@color/darkModeNumberButtonColor</item>
        <item name="numberButtonPressedColor">@color/darkModeNumberButtonPressedColor</item>
        <item name="eraseButtonColor">@color/darkModeEraseButtonColor</item>
        <item name="eraseButtonPressedColor">@color/darkModeEraseButtonPressedColor</item>
        <item name="operationButtonColor">@color/darkModeOperationButtonColor</item>
        <item name="operationButtonPressedColor">@color/darkModeOperationButtonPressedColor</item>
        <item name="operationActiveButtonColor">@color/darkModeOperationActiveButtonColor</item>
        <item name="calculationButtonColor">@color/darkModeCalculateButtonColor</item>
        <item name="calculationButtonPressedColor">@color/darkModeCalculateButtonPressedColor</item>
        <item name="infoPanelBackgroundColor">@color/darkModeInfoPanelBackgroundColor</item>
        <item name="infoPanelFontColor">@color/darkModeInfoPanelFontColor</item>
    </style>

</resources>
