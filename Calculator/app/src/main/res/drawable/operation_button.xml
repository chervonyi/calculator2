<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="@integer/button_color_fade_time">
    <item android:state_pressed="true" android:state_selected="false">
        <shape>
            <solid android:color="?attr/operationButtonPressedColor"/>
            <corners android:radius="@dimen/calculatorButtonCornerRadius"/>
        </shape>
    </item>

    <item android:state_pressed="false" android:state_selected="false">
        <shape>
            <solid android:color="?attr/operationButtonColor"/>
            <corners android:radius="@dimen/calculatorButtonCornerRadius"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="?attr/operationActiveButtonColor"/>
            <corners android:radius="@dimen/calculatorButtonCornerRadius"/>
        </shape>
    </item>
</selector>
