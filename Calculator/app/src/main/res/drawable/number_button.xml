<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="@integer/button_color_fade_time">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="?attr/numberButtonPressedColor"/>
            <corners android:radius="@dimen/calculatorButtonCornerRadius"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="?attr/numberButtonColor"/>
            <corners android:radius="@dimen/calculatorButtonCornerRadius"/>
        </shape>
    </item>
</selector>
